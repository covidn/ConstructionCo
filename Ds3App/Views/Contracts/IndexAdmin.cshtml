@model IEnumerable<Ds3App.Models.Contract>

@{
    ViewBag.Title = "Index";
}

<h2>Contracts</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuotationReference)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuotationReference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("View Contract", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
